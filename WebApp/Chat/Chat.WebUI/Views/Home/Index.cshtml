@{ Layout = "_Layout"; }

<div class="text-center">
    <div class="row">
        <div class="col">
            <div class="container container-space hide">
                <div id="allMessage" class="row">
                </div>
            </div>
            <div class="form-group hide">
                <label>*Message</label>
                <textarea class="form-control" id="message" placeholder="Message"></textarea>
            </div>

            <button class="btn btn-primary hide" id="send">Send</button>
        </div>
        <div class="col">
            <div class="form-group">
                <label>*Nickname</label>
                <input type="text" class="form-control" id="nickname" placeholder="Nickname">
            </div>
            <div class="form-group">
                <label>*Select Room</label>
                <select class="form-control" id="room">
                    <option value="" selected disabled>Select Room</option>
                    <option value="2630653e-77bf-11eb-8454-0242ac110002">Room 1</option>
                    <option value="35ad79ea-77bf-11eb-8454-0242ac110002">Room 2</option>
                    <option value="43c84c29-77bf-11eb-8454-0242ac110002">Room 3</option>
                </select>
            </div>
            <button class="btn btn-primary" id="join">Join Room</button>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/signalr.js" type="text/javascript"></script>
<script src="~/js/chat.js" type="text/javascript"></script>